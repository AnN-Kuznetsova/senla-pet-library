{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es2019",
    "jsx": "react",
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
